
<section id = "add">
	<form action="/" method="post">

		<div class = "row">
			<div class ="col-lg-10 col-md-9 col-sm-9 col-xs-9">
				<textarea class = "form-control" name="post_content" id="text_area" placeholder="Write your note here!"></textarea>
			</div>

			<div class = "col-lg-2 col-md-3 col-sm-3 col-xs-3">
				<button type="submit" class="btn btn-lg">Take Note!</button>
			</div>
		</div>

	</form>
</section>


<% @notes.each do |note| %>

  <article <%= 'class="complete"' if note.complete %>>
    <p>
      <%= note.content %>
      <span><a href="/<%= note.id %>">[edit]</a></span>
    </p>
    <p class="links">
      <a href="/<%= note.id %>/complete">&#8623;</a>
    </p>
    <p class="meta">Created: <%= note.created_at %></p>
  </article>

<% end %>
