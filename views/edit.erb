<section id="add">
	<% if @note %>

	  <form action="/<%= @note.id %>" method="post" id="edit">

		 <input type="hidden" name="_method" value="put">

	    <div class ="col-lg-10 col-md-9 col-sm-9 col-xs-9">
	    	 <textarea class = "form-control" name="content" placeholder="Write your new note here!"><%= h @note.content %></textarea>
	    </div>

	    <div class = "col-lg-2 col-md-3 col-sm-3 col-xs-3">
	    	<button type="submit" class="btn btn-lg">Take Note!</button>
	    </div>

	 </form>


	<% else %>
	  <h1><b>Note not found.</b></h1>
	<% end %>
</section>





